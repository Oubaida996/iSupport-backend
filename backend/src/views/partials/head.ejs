<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <title>Community Chat</title>
  <style>
    body {
      padding: 0;
      margin: 2.5% 0;
      display: flex;
      justify-content: center;
      flex-direction: column;
      align-items: center;
    }
    #message-container {
      width: 80%;
      max-width: 1200px;
      height: 80vh;
      border: 1px solid black;
    }
    #message-container div {
      background-color: #ccc;
      padding: 5px;
    }
    #message-container div:nth-child(2n) {
      background-color: #fff;
    }
    #send-container {
      position: fixed;
      padding-bottom: 30px;
      bottom: 0;
      background-color: white;
      max-width: 1200px;
      width: 80%;
      display: flex;
    }
    #message-input {
      flex-grow: 1;
    }
    form div {
      margin: 10px;
    }
  </style>
</head>
